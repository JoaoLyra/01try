data.forEach(item => {
                const formattedDate = new Date(item.date).toLocaleDateString('pt-BR');
                const formattedPrice = item.price.toLocaleString('pt-BR', {
                    style: 'currency',
                    currency: 'BRL'

//
table += `
            <tr>
                <td>${formattedDate}</td>
                <td>${item.customer.first_name} ${item.customer.last_name}</td>
                <td>${item.customer.phone}</td>
                <td>${item.store.name}</td>
                <td>${item.store.phone}</td>
                <td>${item.type === 'IN' ? 'ENTRADA' : 'SAÍDA'}</td>
                <td>${item.amount}</td>
                <td>${formattedPrice}</td>
                <td>${(item.amount * item.price).toLocaleString('pt-BR', {
                    style: 'currency',
                    currency: 'BRL'
                })}</td>
            </tr>`;
    });
const init = () => {
    renderTable(dataShop);
}
const renderTable = () => {
    let table = '';

    dataShop.forEach(data => {
        const dinheiroForm = data.price.toLocaleString('pt-BR', {
        style: 'currency',
        currency: 'BRL',
        
    }); 
        table +=`
            <tr>
                <td>${new Date(data.date).toLocaleDateString('pt-BR')}</td>
                <td>${data.customer.first_name} ${data.customer.last_name}</td>
                <td>${data.customer.phone}</td>
                <td>${data.store.name}</td>
                <td>${data.store.phone}</td>
                <td>${data.type === 'IN' ? 'ENTRADA' : 'SAÍDA'}</td>
                <td>${dinheiroForm}</td>
                <td>${data.amount}</td>
            
        </tr>
        `
    });
    
    document.getElementById("guidesTable").innerHTML = table;
}
const renderSelect = () => {
    let selectOpcao = '<option value="">Selecionar Tipo</option>';
    
    data.type.forEach(data => {
        selectOpcao += `<option value="${data.type}">${data.type}</option>`;
        console.log(data)
        const typeFilter = document.getElementById("typeFilter").innerHTML = selectOpcao;
    });
}
init();
   
