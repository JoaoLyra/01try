const renderSelect = () => {
    let inject = '<option value="">Tipo</option>'; 
    Obter todos os tipos únicos dos dados
    const arrSelect = dataShop.map(item => item.type);

     Usar um Set para garantir tipos únicos
    const typesEncontrados = new Set(arrSelect);

    Iterar sobre os tipos únicos encontrados
    typesEncontrados.forEach(type => {
        Converter tipo para texto exibido
        let tipoExibido = '';
        if (type === 'IN') {
            tipoExibido = 'Entrada';
        } else if (type === 'OUT') {
            tipoExibido = 'Saída';
        }

         Adicionar opção ao HTML injetado
        inject += `<option value="${type}">${tipoExibido}</option>`;
    });

    Atualizar o elemento <select> com as opções
    document.getElementById('arrSelect').innerHTML = inject;
};

document.getElementById('arrSelect').innerHTML = inject;
